<script> 
var index_url = '{MOBILE_URL}';
var php_self = '{PHP_SELF}';
var postField = {};
$(document).ready(function() {                
    $('#btn_submit').click(function(){              
        var that = $("#btn_submit");
        if (that.hasClass("isLoading")) {
            return false;
        }      
        //提交后必选校验   
        if (!check_required_options.init($(this))) {          
          return false;
        }
        var dataParam = postField;        
        $.ajax({
          type: "POST",
          url: index_url+php_self + '?m=message.save',
          dataType: "json",
          data: dataParam,
          cache: false,
          success: function(data) {
            //console.log(data);
            if (data.success == true) {
              M._alert('提交成功');              
            } else {              
              M._alert(data.message);
              that.removeClass("isLoading").html("提交");              
              return false;
            }
          }
        });

    });
});

var check_required_options = {
  init: function(_this) {
    if (_this.hasClass("isLoading")) {
      return false;
    }
    postField.username = $('#username').val();
    if ( postField.username == '' ) {
        M._alert('请填写您的真实姓名');
        $('#username').focus();
        return false;
    }
    postField.mobile = $('#mobile').val();
    if ( postField.mobile == '' ) {
        M._alert('请填写您的手机号码');
        $('#mobile').focus();
        return false;
    }    
    if (!/^1([3]|[5]|[8]|[4]|[7])[0-9]{9}$/.test(postField.mobile)) {
        M._alert('手机号码格式不正确！');
        $('#mobile').focus();
        return false;
    }    
    postField.message_type = 2;
    postField.message_class = $('#message_class').val();    
    postField.credit = $("#credit").val();    
    postField.id_card = $("#id_card").val();            

    _this.addClass("isLoading").html("loading...");
    return true;  
  }
}
</script>

